@model object

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center" style="height: calc(100vh - 120px)">
    <form class="text-center border border-light p-5" action="#!">

        <!-- Email -->
        <input type="email" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="E-mail">

        <!-- Password -->
        <input type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Password">

        <div class="d-flex justify-content-around">
            <div>
                <!-- Remember me -->
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                    <label class="custom-control-label mr-1" for="defaultLoginFormRemember">Запомнить?</label>
                </div>
            </div>
            <div>
                <!-- Forgot password -->
                <a href="">Забыли пароль?</a>
            </div>
        </div>

        <!-- Sign in button -->
        <button class="btn btn-info btn-block my-4" type="submit">Вход</button>
    </form>
</div>