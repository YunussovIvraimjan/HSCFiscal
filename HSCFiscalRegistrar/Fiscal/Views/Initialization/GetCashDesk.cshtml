@model IEnumerable<Models.Kkm>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/dataTables.bootstrap4.min.css"/>
<link rel="stylesheet" href="~/css/jquery.dataTables.min.css"/>

<style>
    td {
        text-align: center;
        vertical-align: middle;
    }
    
    .form-control {
        margin: 5px;
    }
</style>

<div class="container-fluid">
    <table style="font-size: .7em" class="table table-striped table-bordered table-hover" id="myDataTable">
        <thead>
        <tr>
            <th>Название кассы</th>
            <th>Серийный номер</th>
            <th>Описание</th>
            <th>Текущий статус</th>
            <th>Дата последней операции</th>
            <th>Режим</th>
            <th>Организация</th>
            <th>ИИН/БИН</th>
            <th>Адрес кассы</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.SerialNumber</td>
                <td>@item.Description</td>
                <td>@item.CurrentStatus</td>
                <td>@item.LastDateOperation</td>
                <td>@item.Mode</td>
                <td>@item.User.Title</td>
                <td>@item.User.Inn</td>
                <td>@item.Address</td>
                @if (item.OfdToken == 0)
                {
                    <td>
                        @{ await Html.RenderPartialAsync("Activition", item); }
                    </td>
                }
                else
                {
                    <td>
                        @{ await Html.RenderPartialAsync("change_token", item); }
                    </td>
                }

            </tr>
        }
        </tbody>
    </table>
</div>