@model Fiscal.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Изменить пароль";
    Layout = "_Layout";
}

<h3 class="text-center border-bottom py-3">Изменение пароля для пользователя @Model.Email</h3>
<div class="container d-flex justify-content-center align-items-center flex-column">
    <form style="width: 350px" asp-action="ChangePassword" asp-controller="Account">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="Email"/>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">Новый пароль</label>
            <input type="text" asp-for="NewPassword" class="form-control" placeholder="Введите новый пароль"/>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm" class="control-label">Повторите пароль</label>
            <input type="text" asp-for="PasswordConfirm" class="form-control" placeholder="Введите повторно новый пароль"/>
        </div>
        <div class="form-group">
            <input class="btn btn-secondary" type="submit" value="Сохранить"/>
        </div>
    </form>
</div>