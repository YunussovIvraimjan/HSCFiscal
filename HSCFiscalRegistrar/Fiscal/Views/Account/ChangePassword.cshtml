@model Fiscal.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Изменить пароль";
    Layout = "_Layout";
}

<h2>Изменение пароля для пользователя @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>
 
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
            <label asp-for="PasswordConfirm" class="control-label">Повторите пароль</label>
            <input type="text" asp-for="PasswordConfirm" class="form-control" />
        </div>
    <div class="form-group">
        <input class="btn btn-secondary" type="submit" value="Сохранить" />
    </div>
</form>
